@model CustomUser

<div class="modal-dialog" role="document">
    <form class="modal-content" action="/Users/doUpdate" method="POST">
        <div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="">
                <div class="form-group row">
                    <input type="text" name="Id" value="@Model.Id" style="display:none" />
                    <label class="col-sm-2 col-form-label" for="FullName">Fullname:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="User FullName" name="FullName" value="@Model.FullName" />
                    </div>

                    </>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="Age">Age:</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" placeholder="User Age" name="Age" value="@Model.Age" />
                        </div>

                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="FullName">PhoneNumber:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="User PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
    </form>
</div>